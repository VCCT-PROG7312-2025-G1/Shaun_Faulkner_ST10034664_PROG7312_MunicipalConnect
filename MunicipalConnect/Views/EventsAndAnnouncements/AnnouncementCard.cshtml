@model Announcement

<div class="ann-body">
    <div class="ann-row">
        <div class="ann-icon">📢</div>
        <h3 class="ann-title">@Model.Title</h3>
    </div>
    <p class="ann-text">@Model.Description</p>
</div>

<style>
    .ann-body {
        padding: 10px 2px 6px 2px;
    }
    .ann-row {
        display: flex;
        align-items: center;
        gap: .5rem;
    }

    .ann-icon {
        font-size: 1.1rem;
        color: #f59e0b;
    }

    .ann-title {
        margin: 0;
        font-weight: 700;
        font-size: 1.05rem;
        color: #1e293b;
    }

    .ann-text {
        margin: .35rem 0 0;
        color: #475569;
        font-size: .95rem;
        line-height: 1.4;
    }
</style>
